<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.cardview.widget.CardView
        android:id="@+id/char_card"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:cardCornerRadius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:strokeColor="@color/gray"
        app:strokeWidth="1dp">
        <ImageView
            android:id="@+id/char_image"
            android:layout_width="100dp"
            android:layout_height="145dp"
            android:scaleType="fitXY" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/char_fullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Full Name"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/char_card"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/char_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Nickname"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/char_fullname"
        app:layout_constraintTop_toBottomOf="@id/char_fullname"
        android:layout_marginTop="8dp"
        android:textColor="@color/dim_gray" />

</androidx.constraintlayout.widget.ConstraintLayout>